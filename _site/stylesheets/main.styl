$active = gold
$text_color = white

#ads
  text-align center
  padding 20px

.google
  background: rgb(221, 75, 57);
  color: white;
  &:before
    content:"\f1a0"
    font-family: 'FontAwesome'

.twitter
  background: #55ACEE;
  color: white;
  &:before
    content:"\f099"
    font-family: 'FontAwesome'

.facebook
  background: #3B5998
  color: white;
  &:before
    content:"\f09a"
    font-family: 'FontAwesome'
html
  background white
  font-family: Sans-Serif, Arial, Helvetica
  a
    margin 0 10px
    color white
  a.active
    color yellow
  a.visited
    color inherit

  &.logged-in
    #navigation
      .logged-in
        display inline
  &.logged-out
    #navigation
      .logged-out
        display inline

  #navigation
    .logged-in, .logged-out
      display none
    background: green;
    vertical-align: top;
    padding: 10px
    box-sizing border-box
    color white
    > div
      display inline-block
    > .right
      float right
    > .left
      float left


  #routes
    max-width 800px
    margin 0 auto
    .router-header
      margin 20px 0
      font-size 25px
      color green
    [data-route = "/login"]
      .status
        display: inline-block;
        color: green;
        margin-left: 20px;
        > div
          display none
        &[data-state="saving"] .saving
          display block
        &[data-state="error"] .error
          display block
        &[data-state="saved"] .saved
          display block
      img.profile
        width: 32px;
        height: 32px;
        border-radius: 16px;
        margin-right 16px
        vertical-align top
        object-fit cover
      .modify
        padding-bottom 10px
      .save
        background green
        color white
        padding 10px
        margin-bottom 30px
        display: inline-block;
        margin-top: 20px
        cursor pointer
      .logged-out
        text-align center
        .description
          opacity .5
          color black
          text-align left
          padding-top: 20px;
        .logins
          > div
            text-align: left;
            border: 1px solid green;
            width: 300px;
            margin: 10px;
            padding: 10px;
            display: inline-block;
            vertical-align top
            > input
              padding 10px
            > div
              padding: 10px 0;
            > .router-header
              margin 0 0 10px 0
              padding 0
            .login
              background green
              color white
              padding 10px
              margin-top 10px
              display: inline-block;
              cursor pointer
              &:hover
                opacity .8
        .socials, .social-connect
          display: flex;
          justify-content: space-around;
          margin-top 20px
          [data-login]
            padding 20px
            display inline-block
            cursor pointer
            &:hover
              opacity .8
            &:before
              margin-right 20px
    [data-route='/store']
      .store-front
        display: flex;
        justify-content: space-around;
        .store-item
          display inline-block
          border 1px solid black
          margin 10px
          .header
            padding 20px

        .form
          padding 10px
          box-sizing border-box
          display none
          > div
            color green
          > div.submit
            color white
            background green
            padding 10px
            cursor pointer
            display inline-block
          textarea
            width 100%
            height 5em
            &.riddle
              height 10em


    [data-route='/'], [data-route='/old']
      .question
        border: 1px solid black;
        padding: 10px;
      .guesses
        height 300px
        border 1px solid green
        margin-top: 50px;
        overflow: auto;
        > .guess
          margin 0
          padding 5px
          .profile
            display inline-block
            > img
              width: 32px;
              height: 32px;
              border-radius: 16px;
              margin-right 16px
              vertical-align top
              object-fit cover
          .attempt
            display inline
            text-align center
            > .username
              opacity .5
            .name
              margin-left 10px
              color red
            &[data-correct="true"]  .name
              color green
          hr
            display none

      .answer-form
        .guess-field
          vertical-align top
          height: 30px;
          width 80%
          margin 0
          display inline-block
          box-sizing border-box
        .button
          background: green;
          width: 20%;
          height: 30px;
          display: inline-block;
          color: white;
          text-align: center;
          line-height: 30px;
          cursor pointer



