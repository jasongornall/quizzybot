$active = gold
$text_color = white

html
  background white
  font-family: Sans-Serif, Arial, Helvetica
  #routes
    max-width 800px
    margin 0 auto
    [data-route='/']
      .question
        border: 1px solid black;
        padding: 10px;
      .guesses
        height 340px
        border 1px solid green
        margin-top: 50px;
        overflow: auto;
      .answer-form
        .guess-field
          vertical-align top
          height: 30px;
          width 80%
          margin 0
          display inline-block
          box-sizing border-box
        .button
          background: green;
          width: 20%;
          height: 30px;
          display: inline-block;
          color: white;
          text-align: center;
          line-height: 30px;
          cursor pointer



